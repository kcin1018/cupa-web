                <img src="<?php echo $this->baseUrl(); ?>/images/ico-delete.png"/>
            </a>
            <?php endif; ?>
        </div>
        <div class="name"><?php echo $this->fullname($officer['user_id']); ?></div>
        <div class="position"><?php echo $this->escape($officer['position']); ?></div>
        <div class="email">
            <?php if($officer['position'] != 'At Large Board Member'): ?>
            <?php echo $this->displayEmail(strtolower(str_replace(' ', '-', $officer['position'])) . '@cincyultimate.org'); ?>
            <?php else: ?>
            <?php echo $this->displayEmail($officer['user_id']); ?>
            <?php endif; ?>
        </div>
        <div class="since">Since: <?php echo date('M dS, Y', strtotime($officer['since'])); ?></div>
    </div>
    <div class="description">
        <?php echo $this->escape($officer['description']); ?>
    </div>
    <div class="clearfix"><hr/></div>
</div>
<?php endforeach; ?>

