        <div class="height"><?php echo (empty($minor['height'])) ? '&nbsp;' : $this->displayHeight($minor['height']); ?></div>
        <div class="level"><?php echo (empty($minor['level'])) ? '&nbsp;' : $this->escape($minor['level']); ?></div>
        <div class="experience"><?php echo (empty($minor['experience'])) ? '&nbsp;' : $this->escape($minor['experience']); ?></div>
