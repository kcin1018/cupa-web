            <a href="<?php echo $this->url(array('minor_id' => $minor['id']), 'profile_edit_minor'); ?>"><img title="Edit Minor" src="<?php echo $this->baseUrl(); ?>/images/ico-edit.png"/></a>
        </div>
    </div>
    <?php endforeach; ?>
    <?php else: ?>
    <p>You have no minors associated to you.  Use the 'Add Minor' link to add one.</p>
    <?php endif; ?>
</div>
