<h1 class="profile"><?php echo $this->escape($this->data['first_name'] . ' ' . $this->data['last_name']); ?></h1>

<div class="profile-menu">
    <?php echo $this->partial('profile/menu.phtml', array('state' => $this->state));?>
</div>

<div class="minors-links">
    <a class="button" href="<?php echo $this->url(array(), 'profile_add_minor'); ?>">Add Minor</a>
</div>


<div class="minors">
    <?php if(count($this->data['minors'])): ?>
    <div class="row header">
        <div class="name">Minor</div>
        <div class="gender">Gender</div>
        <div class="birthday">Birthday</div>
        <div class="nickname">Nickname</div>
        <div class="height">Height</div>
        <div class="level">Level</div>
        <div class="experience">Experience</div>
        <div class="action">&nbsp;</div>
    </div>
